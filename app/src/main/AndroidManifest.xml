<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.natinc.oluwatobiloba.medmanager">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SignInActivity"
            android:theme="@style/SignInTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.DashBoardActivity"></activity>
        <activity android:name=".activities.EditProfileActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.natinc.oluwatobiloba.medmanager.activities.DashBoardActivity" />
        </activity>
        <activity android:name=".activities.AddMedicationActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.natinc.oluwatobiloba.medmanager.activities.DashBoardActivity" />
        </activity>
        <activity android:name=".activities.MedicationDetails">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.natinc.oluwatobiloba.medmanager.activities.DashBoardActivity" />
        </activity>
    </application>

</manifest>